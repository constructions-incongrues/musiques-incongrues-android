<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="wrap_content"
  android:orientation="horizontal" android:paddingTop="5dip"
  android:paddingBottom="5dip">

  <ImageView android:id="@+id/objectIcon" android:src="@drawable/save"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:paddingLeft="5dip"
    android:paddingRight="5dip" />

  <LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/objectName"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:textColor="@color/mi_pink" android:textSize="6pt"
      android:layout_weight="5" android:gravity="center_vertical" />

    <TextView android:id="@+id/objectStatus"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:textColor="@color/light_mi_pink" android:textSize="6pt"
      android:layout_weight="5" android:gravity="center_vertical" />

    <ProgressBar android:layout_width="fill_parent"
      android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
      android:id="@+id/objectDlBar" android:max="100"
      android:layout_weight="5" />

  </LinearLayout>

  <!-- android:progressDrawable="@drawable/mi_progress_bar" -->

</LinearLayout>

