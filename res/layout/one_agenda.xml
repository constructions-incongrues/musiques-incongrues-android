<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="wrap_content"
  android:orientation="horizontal" android:paddingTop="5dip"
  android:paddingBottom="5dip">

  <ImageView android:id="@+id/thingIcon" android:src="@drawable/rss"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:paddingLeft="5dip"
    android:paddingRight="5dip" />

  <LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/thingTitle" android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:textColor="#333333"
      android:textSize="16dip" android:layout_weight="5" android:gravity="center_vertical" />

  </LinearLayout>

</LinearLayout>